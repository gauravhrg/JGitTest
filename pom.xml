<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>groupId</groupId>
  <artifactId>POC_1</artifactId>
  <version>2.22-SNAPSHOT</version>

  <scm>
    <developerConnection>scm:git:${project.scm.url}</developerConnection>
    <tag>HEAD</tag>
    <url>https://github.com/gauravhrg/JGitTest.git</url>
  </scm>

  <properties>
    <java.version>1.8</java.version>
    <testdata.release.dir.refData>${project.basedir}/src/main/java/robotframework/testdata/reference_data</testdata.release.dir.refData>
    <testdata.release.dir.repo>path_of_robot_repo</testdata.release.dir.repo>
    <testdata.release.git.branch>refs/heads/master</testdata.release.git.branch>
    <testdata.release.git.password>password</testdata.release.git.password>
    <testdata.release.git.remote>origin</testdata.release.git.remote>
    <testdata.release.git.url>${project.scm.url}</testdata.release.git.url>
    <testdata.release.git.userName>username</testdata.release.git.userName>
    <testdata.release.version>${project.version}</testdata.release.version>
  </properties>
  <build>
    <plugins>
      <plugin>
        <!-- Set 1.8 as target, use project source encoding -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <optimize>true</optimize>
          <debug>true</debug>
          <compilerId>javac</compilerId>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.6</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.1</version>
    </dependency>
    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>1.8.3</version>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.5</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jgit</groupId>
      <artifactId>org.eclipse.jgit</artifactId>
      <version>4.7.0.201704051617-r</version>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>testdata_release_prepare</id>
      <activation>
        <property>
          <name>copyTestDataToVersionFolder</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.6.0</version>
            <executions>
              <execution>
                <goals>
                  <goal>java</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <mainClass>test.TestDataReleasePrepare</mainClass>
                  <arguments>
                    <argument>${testdata.release.version}</argument>
                    <argument>${testdata.release.dir.refData}</argument>
                    <argument>${testdata.release.git.url}</argument>
                    <argument>${testdata.release.dir.repo}</argument>
                    <argument>${testdata.release.git.branch}</argument>
                    <argument>${testdata.release.git.remote}</argument>
                    <argument>${testdata.release.git.userName}</argument>
                    <argument>${testdata.release.git.password}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>